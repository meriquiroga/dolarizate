<body>
    <div class="container">
        <div class="half form-half">
            <form id="loginForm" onsubmit="return validarFormulario()">
                <h2>Iniciar Sesión</h2>
                <input type="text" id="usuario" placeholder="Usuario" required>
                <input type="password" id="contrasena" placeholder="Contraseña" required>
                <button type="submit">Iniciar Sesión</button>
                <p class="error-message" id="errorMessage"></p>

 <!--Falta crear paginna para recuperar la contrasela-->
                <p class="forgot-password"><a href="recuperar-contrasena.html">¿Olvidaste tu contraseña?</a></p>

            </form>
        </div>
        <div class="half image-half"></div>
    </div>

    <script>
        function validarFormulario() {
            var usuario = document.getElementById("usuario").value;
            var contrasena = document.getElementById("contrasena").value;
            var errorMessage = document.getElementById("errorMessage");

            // Validación de usuario y contraseña 
            if (usuario === "usuario" && contrasena === "contrasena") {
                errorMessage.textContent = ""; // Limpia el mensaje de error
                return true; // Envía el formulario
            } else {
                errorMessage.textContent = "Usuario o contraseña incorrectos.";
                return false; // No envía el formulario
            }
        }
    </script>
